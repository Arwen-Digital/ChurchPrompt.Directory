---
// Dynamic sitemap that fetches published blogs from Convex
export const prerender = false;

const convexUrl = import.meta.env.PUBLIC_CONVEX_URL;
const siteUrl = Astro.site?.toString() || 'https://churchprompt.directory';

interface Blog {
  slug: string;
  updatedAt: number;
}

interface Prompt {
  _id: string;
  updatedAt?: number;
}

// Fetch published blogs
let blogs: Blog[] = [];
let prompts: Prompt[] = [];

try {
  const blogsResponse = await fetch(`${convexUrl}/api/query`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({
      path: 'blogs:getPublishedBlogs',
      args: {},
    }),
  });
  if (blogsResponse.ok) {
    const result = await blogsResponse.json();
    blogs = result.value || [];
  }
} catch (e) {
  console.error('Error fetching blogs for sitemap:', e);
}

try {
  const promptsResponse = await fetch(`${convexUrl}/api/query`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({
      path: 'prompts:getApprovedPrompts',
      args: {},
    }),
  });
  if (promptsResponse.ok) {
    const result = await promptsResponse.json();
    prompts = result.value || [];
  }
} catch (e) {
  console.error('Error fetching prompts for sitemap:', e);
}

// Static pages
const staticPages = [
  { url: '', priority: '1.0', changefreq: 'daily' },
  { url: '/directory', priority: '0.9', changefreq: 'daily' },
  { url: '/blogs', priority: '0.8', changefreq: 'daily' },
  { url: '/submit', priority: '0.6', changefreq: 'monthly' },
  { url: '/subscribe', priority: '0.5', changefreq: 'monthly' },
];

// Format date for sitemap
function formatDate(timestamp?: number): string {
  const date = timestamp ? new Date(timestamp) : new Date();
  return date.toISOString().split('T')[0];
}

// Build sitemap XML
const sitemap = `<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  ${staticPages.map(page => `
  <url>
    <loc>${siteUrl}${page.url}</loc>
    <lastmod>${formatDate()}</lastmod>
    <changefreq>${page.changefreq}</changefreq>
    <priority>${page.priority}</priority>
  </url>`).join('')}
  ${blogs.map(blog => `
  <url>
    <loc>${siteUrl}/blogs/${blog.slug}</loc>
    <lastmod>${formatDate(blog.updatedAt)}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>`).join('')}
  ${prompts.map(prompt => `
  <url>
    <loc>${siteUrl}/directory/${prompt._id}</loc>
    <lastmod>${formatDate(prompt.updatedAt)}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>`).join('')}
</urlset>`.trim();
---
{sitemap}
